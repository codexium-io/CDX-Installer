function DisplayLineEnd
{
  echo -e "\b\b\b\b\b\b[DONE]"
}

function DisplayBlockFill
{
  local -i len
  local -i rem
  local -i i=1
  # simple math calculations
  (( len = $(echo $@ | wc -c) - 1 ))
  WIDTH=$(tput cols) # Get width of display
  (( rem = WIDTH - 2 - len ))
  #echo -n "$@ "
  # print dots
  while (( i <= rem - 1 ))
  do
    echo -n "#"
    (( i++ ))
  done
  echo ""
}

function DisplayBlockLine
{
  local -i len
  local -i rem
  local -i i=1
  # simple math calculations
  (( len = $(echo $@ | wc -c) - 1 ))
  WIDTH=$(tput cols) # Get width of display
  (( rem = WIDTH - 3 - len ))
  echo -n "# "
  echo -n "$@ "
  # print dots
  while (( i <= rem - 4 ))
  do
    echo -n " "
    (( i++ ))
  done
  echo "#"
}


function DisplaySection
{
  DisplayBlockFill 
  DisplayBlockLine $@
  DisplayBlockFill
}



